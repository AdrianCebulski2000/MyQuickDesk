@model IEnumerable<MyQuickDesk.Entities.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>My reservations</h1>


<table class="table">
    <thead>
        <tr>

            <th>
                <label asp-for="First().StartTime"></label>
            </th>
            <th>
                <label asp-for="First().EndTime"></label>
            </th>
            <th>
                <label>Name</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.StartTime
                </td>
                <td>
                    @item.EndTime
                </td>
                <td>
                    @item.Space.Name
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="details-link">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="edit-link">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="delete-link">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


