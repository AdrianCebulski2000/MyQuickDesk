@model MyQuickDesk.Entities.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>@Resource.Details</h1>

<div>
    <h4>@Resource.Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>@Resource.StartTime</label>
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime
        </dd>
        <dt class="col-sm-2">
            <label>@Resource.EndTime</label>
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime
        </dd>
        <dt class="col-sm-2">
            <label>@Resource.Name</label>
         </dt>
         <dd class="col-sm-10">
            @Model.Space.Name
        </dd>

        <input type="hidden" name="spaceId" value="@ViewBag.SpaceId" />
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Resource.Edit</a>
    <a class="back-to-list-btn" asp-action="Index">@Resource.Back</a>
</div>



