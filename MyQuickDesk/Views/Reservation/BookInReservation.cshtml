@model MyQuickDesk.Entities.Reservation

@{
    ViewData["Title"] = "Book Reservation";
}

<h1>Book Reservation</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookInReservation">

            <div class="form-group">
                <label asp-for="StartTime" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="StartTime" class="form-control" readonly />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="EndTime" class="form-control" readonly />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Book</button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

