@model MyQuickDesk.Entities.Desk

@{
    ViewData["Title"] = "Details";
}

<h1>@Resource.Details</h1>

<div>
    <h4>Desk</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            <label>@Resource.Name</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label>@Resource.Description</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">@Resource.Edit</a>
    }
    <a class="back-to-list-btn" asp-action="Index">@Resource.Back</a>
</div>
