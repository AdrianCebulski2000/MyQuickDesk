@model MyQuickDesk.Entities.Desk

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }
</style>

<h1>Details</h1>

<div>
    <h4>Desk</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="edit-link">Edit</a>
    }
    <a asp-action="Index" class="back-to-list-btn">Back to List</a>
</div>
