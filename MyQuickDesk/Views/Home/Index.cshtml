@using MyQuickDesk.ApplicationUser;
@inject IUserContext UserContext
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Productivity starts here.</h1>
    <img src="~/img/newlogo-small.png" class="QuickDeskLogo" alt="MyQuickDesk-logo">
    <div class="d-flex justify-content-center">
        @if (UserContext.IsUserLoggedIn())
        {
            <a href="/Desk" class="btn btn-primary">@Resource.BookHotdesk</a>
            <a href="/Room" class="btn btn-primary">@Resource.BookRoom</a>
        }
        else
        {
            <a href="/Identity/Account/Login" class="btn btn-primary">@Resource.LoginBook</a>
        }

    </div>
</div>


