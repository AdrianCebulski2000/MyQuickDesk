@model MyQuickDesk.Entities.Room

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        background-image: url('/img/backgroundtabs.png');
        background-repeat: no-repeat;
        background-size: 1920px 1080px;
    }
</style>
<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            <label asp-for="MaxCapacity"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.MaxCapacity
        </dd>
    </dl>
</div>
<div>
   <a asp-action="Edit" asp-route-id="@Model.Id"class="edit-link">Edit</a> 
    <a class="back-to-list-btn" asp-action="Index">Back to List</a>
</div>
