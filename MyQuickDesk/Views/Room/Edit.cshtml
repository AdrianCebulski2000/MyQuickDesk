@model MyQuickDesk.Entities.Room

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resource.Edit</h1>

<h4>@Resource.ConferencialRoom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>@Resource.Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resource.Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resource.MaxCapacity</label>
                <input asp-for="MaxCapacity" class="form-control" />
                <span asp-validation-for="MaxCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value=@Resource.Save class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="back-to-list-btn" asp-action="Index">@Resource.Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
