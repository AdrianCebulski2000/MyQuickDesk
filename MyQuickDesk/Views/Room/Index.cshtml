@model IEnumerable<MyQuickDesk.Models.Room>

@{
    ViewData["Title"] = "Index";
}



<h1>Conferencial Room</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
               <label asp-for="First().Name"></label>
            </th>
            <th>
                <label asp-for="First().Description"></label>
            </th>
            
            <th>
            <label asp-for="First().InteractiveBoard"></label>
            </th>

            <th>
            <label asp-for="First().MaxCapacity"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @item.Name
            </td>
            <td>
               @item.Description
            </td>
            <td>
               @if (item.InteractiveBoard)
               {
                   <text>yes</text>
               }
               else
               {
                   <text>no</text>
               }
            </td>
            
            <td>
                @item.MaxCapacity
               
            </td>
            
            <td>
               <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
               <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
               <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
