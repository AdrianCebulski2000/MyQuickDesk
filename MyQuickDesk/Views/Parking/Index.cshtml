@model IEnumerable<MyQuickDesk.Entities.ParkingSpot>

@{
    ViewData["Title"] = "Index";
}

<h1>Parking Spot</h1>

<p>
    <a asp-action="Create" class="create-link">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().Name"></label>
            </th>
            <th>
                <label asp-for="First().Description"></label>
            </th>
            <th>
                <label asp-for="First().IsAvaible"></label>
            </th>
            <th>
                <label asp-for="First().HandicappedSpot"></label>
            </th>
            <th>
                <label asp-for="First().Charger"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.IsAvaible
            </td>
            <td>
               @item.HandicappedSpot
            </td>
            <td>
               @item.Charger
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="details-link">Details</a>
            </td>
                <td>
                    <a asp-action="AddToFavorites" asp-route-id="@item.Id" class="details-link">Add to favorites</a>
                </td>
        </tr>
}
    </tbody>
</table>
