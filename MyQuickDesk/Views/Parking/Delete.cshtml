@model MyQuickDesk.Entities.ParkingSpot

@{
    ViewData["Title"] = "Delete";
}

<h1>@Resource.Delete</h1>

<h3>@Resource.AreYouSure?</h3>
<div>
    <h4>@Resource.ParkingSpot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Resource.HandicappedSpot
        </dt>
        <dd class="col-sm-10">
            @Model.HandicappedSpot
        </dd>
        <dt class="col-sm-2">
            @Resource.Charger
        </dt>
        <dd class="col-sm-10">
            @Model.Charger
        </dd>

        <dt class="col-sm-2">
            @Resource.Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            @Resource.IsAvaiable
        </dt>
        <dd class="col-sm-10">
            @Model.IsAvaiable
        </dd>
        <dt class="col-sm-2">
            @Resource.Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            @Resource.MaxCapacity
        </dt>
        <dd class="col-sm-10">
            @Model.MaxCapacity
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="submit" value=@Resource.Delete class="btn btn-danger" /> |
        <a asp-action="Index">@Resource.Back</a>
    </form>
</div>
