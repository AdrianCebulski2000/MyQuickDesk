@model MyQuickDesk.Entities.ParkingSpot

@{
    ViewData["Title"] = "Details";
}

<h1>@Resource.Details</h1>

<div>
    <h4>@Resource.ParkingSpot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>@Resource.Name</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label>@Resource.Description</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            <label>@Resource.HandicappedSpot</label>
        </dt>
        <dd class="col-sm-10">
            @Model.HandicappedSpot
        </dd>
        <dt class="col-sm-2">
            <label>@Resource.Charger</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Charger
        </dd>
        <dt class="col-sm-2">
            <label>@Resource.IsAvaiable</label>
        </dt>
        <dd class="col-sm-10">
            @Model.IsAvaiable
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Resource.Edit</a> |
    <a class="back-to-list-btn" asp-action="Index">@Resource.Back</a>
</div>
